/* pages/placeOrder/placeOrder.wxss */
@import '../util/publicCss';
.botton{
  background: transparent;
  border:0;
  padding: 0; 
  border-radius: 0;
}
.botton::after{
  border: none;
}
.main{
  height: 88vh;
}
.top{
  height: 210rpx;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;

  border-top: 1rpx;
  border-top-style: solid;
  border-top-color: rgb(223,223,221);
  border-bottom: 1rpx;
  border-bottom-style: solid;
  border-bottom-color: rgb(223,223,221);
}
.top_img{
    display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin: 18rpx 0 21rpx 0 ;
}
.top_img,.top_img>image{
  width: 124rpx;
  height: 124rpx;
  border-radius: 6rpx;
}
.top_txt{
  height: 30rpx;
  font-size: 30rpx;
  line-height: 30rpx;
  color: rgb(51,51,51);
}
/* 主体 */
.mid{
  background-color: #fff;
  margin-top: 20rpx;
}
.list-item{
  height: 108rpx;
  padding: 0 26rpx;
  border-top: 0.5rpx;
  border-top-style: solid;
  border-top-color: rgb(223,223,221);
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.list-item-left{
  display: inline-block;
  font-size: 32rpx;
}
.list-item-right{
  height: 32rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
  vertical-align: middle;
  vertical-align: -webkit-baseline-middle;
}


.list-item-right>view
,.list-item-right>view>image{
  width: 15rpx;
  height: 32rpx;
}
.list-item-right>view{
  margin-left: 18rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

/* 数量 */
.list-item-rightN{
  height: 32rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
  vertical-align: middle;
  vertical-align: -webkit-baseline-middle;
}
.list-item-rightN>view{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.list-item-rightN>.reduce,.list-item-rightN>.add{
  width: 70rpx;
  height: 70rpx;
  border: 1rpx solid rgb(223,223,221);
  color: rgb(0,0,0);
}
.list-item-rightN>.reduce{
  color: rgb(153,153,153);
}
.list-item-rightN>.num{
  width: 112rpx;
  height: 70rpx;
  border-top: 1rpx;
  border-top-color: rgb(223,223,221);
  border-top-style: solid;
  
  border-bottom: 1rpx;
  border-bottom-color: rgb(223,223,221);
  border-bottom-style: solid;
}
/* 备注 */
.list-end{
  height: 108rpx;
  padding: 0 26rpx;
  border-top: 0.5rpx;
  border-top-style: solid;
  border-top-color: rgb(223,223,221);
  border-bottom: 1rpx;
  border-bottom-style: solid;
  border-bottom-color:  rgb(223,223,221);
  display: flex;
  flex-direction: row;
  align-items: center;

}
.list-end>text{
  width: 100rpx;
  font-size: 32rpx;
  margin-right: 53rpx;
}
.list-end>input{
  width: 100%;
  font-size: 32rpx;
}
.remarkInput{
  font-size: 32rpx;
  color: rgb(153,153,153);
}
.bottom{
  margin-top: 20rpx;
  background-color: #FFF;
  border-bottom: 1rpx;
  border-bottom-style: solid;
  border-bottom-color:  rgb(223,223,221);
}

/* footer */
.footer{
  margin-top: 20rpx;
}
.footer>view{
  width: 700rpx;
 height: 98 rpx;
  line-height: 98rpx;
  text-align: center;
  font-size: 36rpx;
  color:#fff;
  border-radius: 6rpx;
  background-color: rgb(134,178,249);
  margin: 0 auto;
}
.allMunMone{
  width: 200rpx;
}
.allMunMone>.allMoney{
  width: 200rpx;
  font-size: 32rpx;
  text-align: right;
}