<!--pages/orderCenter/orderDetail.wxml-->
<scroll-view scroll-y class='main'>
  <!-- 人员信息 -->
  <view class='psnInfo'>
    <view class='psnImg'>
      <image src='{{orderData.psnImg}}'></image>
    </view>
    <view class='psnInfo_R'>
      <view class='psnName'>{{orderData.psnName}}</view>

      <view class='psnSex'>
        <view class='psnSexImg'>
          <image src="{{orderData.sex==1?'http://pgq6951kf.bkt.clouddn.com/icon46.png':'http://pgq6951kf.bkt.clouddn.com/icon45.png'}}"></image>
        </view>
        <view class='psnAge'>
          {{orderData.age}}
        </view>
      </view>
      <view class='psnEaluate'>
        <view class='psnEaluateImg'>

        </view>
        <view class='psnEaluateVal'>
          {{orderData.psnEaluateVal}}</view>
      </view>
    </view>
  </view>
  <!-- 品类 -->
  <view class='Type'>
    <view class='Item'>
      <view class='Item_label'>
        品类
      </view>
      <view class='Item_val'>
        {{orderData.Type}}
      </view>
    </view>
  </view>
  <!-- 时间  -->
  <view class='Time'>
    <view class='Item'>
      <view class='Item_label'>
        时间
      </view>
      <view class='Item_val'>
        {{orderData.Time}}{{orderData.Num}}*{{orderData.Unit}}
      </view>
    </view>
  </view>
  <!-- 费用 -->
  <view class='Cost'>
    <view class='Item'>
      <view class='Item_label'>
        费用
      </view>
      <view class='Item_val'>
        {{orderData.Money}}元*{{orderData.Num}}
      </view>
    </view>
  </view>
  <!-- 优惠 -->
  <view class='Discount'>
 <view class='Item'>
      <view class='Item_label'>
        优惠
      </view>
      <view class='Item_val Item_Discount'>
        {{orderData.Discount}}
      </view>
    </view>
  </view>
  <!-- 合计 -->
  <view class='Total'>
       {{orderData.Money*orderData.Num}}
  </view>
  <!-- 当前订单状态 -->
  <view class='CurrentStatus'></view>
  <!-- 评价显示 -->
  <view class='EaluateShow'></view>
  <!-- 评价 -->
  <view class='Ealuate'></view>
  <!-- 取消 -->
  <view class='ClearOrder'></view>
  <!-- 结束 -->
  <view class='EndOrder'></view>

</scroll-view>