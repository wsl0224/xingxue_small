<!--pages/myReceipt/myReceipt.wxml-->
<wxs module="publicFun" src="../util/publicFun.wxs"></wxs>
<scroll-view scroll-y class='main'>
<view class='main_body'>
<view class='main_list' wx:for="{{orderData}}" bindtap='ToMyReceiptDetail'>
    <view class='main_Item'>
      <view class='Item_Image'>
        <image src='{{item.url}}'></image>
      </view>
      <view class='Item_mid'>
          <view class='Item_midLT'>
            <view class='Item_Name'>
           {{item.name}}
            </view>
            <view class='Item_Title'>
              {{item.title}}
            </view>
            <view class='Item_XZ'>
               {{item.XZ}}
            </view>
          </view>
          <view class="Item_SexAge {{item.sex==1?'man':'woman'}}">
            <view class='Item_Sex'>
                  <image src="{{item.sex==1?'../image/icon/icon46.png':'../image/icon/icon45.png'}}"/>
            </view>
            <view class='Item_Age'>
            {{item.age}}
            </view>
          </view>
           <view class='Item_Bottom'>
           南京 | 刚刚 08月08日 21:00
          </view> 
      </view>
     <view class='Item_Num'>
              X {{item.num}}
        </view>
      <view class='Item_R'>
         <image src='{{publicFun.showStatusImg(item.status)}}'></image>
      </view>
    </view>
  </view>
</view>
  
</scroll-view>