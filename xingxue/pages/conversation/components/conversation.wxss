.rong-avatar{
  height:78rpx;
  width:78rpx;
  border-radius:8rpx;
}

.rong-conversation{
  height: 78rpx;
  position: relative;
  padding: 21rpx 23rpx;
  border-bottom: 1rpx solid rgb(223,223,221);
}

.rong-conversation-messagecontent{
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow:hidden;
  width: 70%;
  font-size: 24rpx;
  color: #666666;
}
.rong-conversation-title{
  color: #333;
  font-size: 32rpx;
}

.rong-conversation-avatar{
  float: left;
  margin-right: 20rpx;
}

.rong-conversation-unreadcount{
  position: absolute;
  top: 10rpx;
  left: 85rpx;
  background-color: red;
  border-radius: 50%;
  color: #FFF;
  height:36rpx;
  min-width: 36rpx;
  text-align:center;
  padding: 0 5rpx;
  box-sizing: border-box;
}

.rong-conversation-senttime{
  position: absolute;
  top: 20rpx;
  right: 20rpx;
}