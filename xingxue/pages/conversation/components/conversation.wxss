.rong-avatar {
  height: 78rpx;
  width: 78rpx;
  border-radius: 8rpx;
}

.rong-conversation {
  width: 100%;
  height: 78rpx;
  position: relative;
  padding: 21rpx 23rpx;
  border-bottom: 1rpx solid rgb(223, 223, 221);
  margin-right:0;

-webkit-transition: all 0.4s;

transition: all 0.4s;

-webkit-transform: translateX(90px);

transform: translateX(90px);

margin-left: -90px


}

.touch-move-active .content, .touch-move-active .del {
  -webkit-transform: translateX(0);
  transform: translateX(0);
}

.rong-conversation-messagecontent {
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  width: 70%;
  font-size: 24rpx;
  color: #666;
}

.rong-conversation-title {
  color: #333;
  font-size: 32rpx;
}

.rong-conversation-avatar {
  float: left;
  margin-right: 20rpx;
}

.rong-conversation-unreadcount {
  position: absolute;
  top: 10rpx;
  left: 85rpx;
  background-color: red;
  border-radius: 50%;
  color: #fff;
  height: 36rpx;
  min-width: 36rpx;
  text-align: center;
  padding: 0 5rpx;
  box-sizing: border-box;
}

.rong-conversation-senttime {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
}

/* 滑动 */

.touch-item {
  display: flex;
  justify-content: space-between;
  width: 100%;
  overflow: hidden;
 
}

.del {
  background-color: orangered;
  width: 90px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  -webkit-transform: translateX(90px);

transform: translateX(90px);

-webkit-transition: all 0.4s;

transition: all 0.4s;
}
.touch-move-active .rong-conversation ,

.touch-move-active .del {

-webkit-transform: translateX(0);

transform: translateX(0);

}